<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TextFormatterLinearlayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/darkGreyHeader"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkGreyHeader"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/format_text"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/GreyBg">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/size"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
            <Spinner
                android:id="@+id/TextSizeSpinner"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/light_grey_text_adder"
                android:entries="@array/FontSizes" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/font"
                android:textSize="20sp"
                android:textColor="@color/white" />
            <Spinner
                android:id="@+id/FontSpinner"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="@drawable/light_grey_text_adder"
                android:entries="@array/Fonts" />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Boldbtn"
                android:layout_width="60dp"
                android:layout_height="50dp"
               android:background="@color/LightGrey"
                android:text="@string/b"
                android:textStyle="bold"
                android:elevation="10dp"
                android:textColor="@color/black"
                android:textSize="30sp" />
            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Italicbtn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/LightGrey"
                android:text="@string/i"
                android:textStyle="italic"
                android:elevation="10dp"
                android:textColor="@color/black"
                android:textSize="30sp" />
            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="15dp"
                    android:foreground="@color/black"
                    android:background="@color/black"
                    android:elevation="20dp"
                    />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Underline"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/LightGrey"
                android:text="@string/u"
                android:textStyle=""
                android:elevation="10dp"
                android:textColor="@color/black"
                android:textSize="30sp" />
            </RelativeLayout>
            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="15dp"
                    android:foreground="@color/black"
                    android:background="@color/black"
                    android:elevation="20dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/StrikeThrough"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@color/LightGrey"
                    android:text="@string/s"
                    android:textStyle=""
                    android:elevation="10dp"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:background="@color/GreyBg"
            android:orientation="vertical">

            <RadioGroup
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/RadioHeaderBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="10dp"/>

                <RadioButton
                    android:id="@+id/RadioTimeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t"
                    android:textColor="#8C0000"
                    android:textStyle="bold"/>
            </RadioGroup>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>