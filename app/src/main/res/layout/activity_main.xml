<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greybricks"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/PurpleNavColor">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/OpenHeaderNavigation"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_east_24"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/opens_the_headers_navigation"/>
            <Space
                android:layout_width="220dp"
                android:layout_height="1dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ExportToDataBaseBtn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/upload"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/allows_user_to_share_their_basement_code"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/EraseBasement"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trash"
                android:backgroundTint="#FF0000" />
        </LinearLayout>

        <ScrollView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/BasementScrollLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/BottomScrollViewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/PurpleNavColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:background="@color/PurpleNavColor"
            android:orientation="vertical">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/RadioHeaderBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/RadioTimeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textColor="#8C0000"
                    android:textStyle="bold"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/PurpleNavColor">
            <LinearLayout
                android:id="@+id/BottomNavigationTopBar"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/OpenGridDialogBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/grid"
                    android:backgroundTint="@color/white"/>
                <Space
                    android:layout_width="40dp"
                    android:layout_height="1dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/TextFormatter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/text_format"
                    android:backgroundTint="@color/white"/>
                <Space
                    android:layout_width="40dp"
                    android:layout_height="1dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cameraBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/camera"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/allows_the_user_to_take_pictures_or_videos"/>
                <Space
                    android:layout_width="40dp"
                    android:layout_height="1dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/OpenRecordAudioDialogBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/mic"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/BottomNavigationBottomBar"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/addTextTxtView"
                        android:layout_width="270dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:autofillHints="Or Start writing here"
                        android:elevation="1dp"
                        android:hint="Type here!"
                        android:inputType="textMultiLine"
                        android:outlineProvider="none"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="280dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_adder"
                        android:contentDescription="@string/allows_the_user_to_type_data_to_the_main_text" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/AddTextBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/add" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>