<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RecordAudioDialog"
    android:layout_marginTop="150dp"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/darkGreyHeader"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:text="Record Audio"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/darkGreyHeader"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:background="@color/GreyBg">

        <ToggleButton
            android:id="@+id/RecordBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textOn=""
            android:textOff=""
            android:foreground="@drawable/play_arrow"
            android:background="@drawable/record_shape"
            android:backgroundTint="@color/white"
            />

        <EditText
            android:id="@+id/TextRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Name Audio log"
            android:textSize="20dp"
            android:textColor="@color/white"
            />
    </LinearLayout>


</LinearLayout>